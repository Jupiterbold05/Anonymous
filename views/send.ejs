<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Send Anonymous Message</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #121212; /* Dark background */
      color: #ffffff; /* White text */
      text-align: center;
      padding: 20px;
    }

    .container {
      max-width: 500px;
      margin: 0 auto;
      background-color: #1e1e1e; /* Slightly lighter dark card background */
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
    }

    h1 {
      color: #ff5722; /* Vibrant orange for header */
      margin-bottom: 20px;
    }

    textarea {
      width: 100%;
      height: 150px;
      padding: 10px;
      border: 1px solid #333333;
      border-radius: 5px;
      font-size: 16px;
      background-color: #2a2a2a;
      color: #ffffff;
    }

    textarea:focus {
      outline: none;
      border-color: #ff5722;
    }

    .btn {
      display: inline-block;
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #ff5722; /* Vibrant orange button */
      color: #ffffff;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      text-decoration: none;
    }

    .btn:hover {
      background-color: #e64a19;
    }

    .thank-you {
      margin-top: 20px;
      padding: 10px;
      background-color: #2e7d32; /* Green background for success */
      color: #ffffff;
      border-radius: 5px;
      display: none; /* Hidden by default */
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Send an Anonymous Message to <%= username %></h1>
    <form id="messageForm" method="POST" action="/send/<%= username %>">
      <textarea name="message" placeholder="Type your message here..." required></textarea>
      <button type="submit" class="btn">Send Message</button>
    </form>
    <div id="thankYou" class="thank-you">Thank you! Your message has been sent.</div>
  </div>

  <script>
    // Handle the form submission to show the thank-you message
    const form = document.getElementById("messageForm");
    const thankYouDiv = document.getElementById("thankYou");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      // Send the message using fetch
      const formData = new FormData(form);
      const response = await fetch(form.action, {
        method: "POST",
        body: formData,
      });

      if (response.ok) {
        // Show thank-you message and reset form
        thankYouDiv.style.display = "block";
        form.reset();
      } else {
        alert("An error occurred. Please try again.");
      }
    });
  </script>
</body>
</html>
