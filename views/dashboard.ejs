<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Basic resets and general styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-image: url('https://i.imgur.com/sVe3swt.jpeg'); /* Christmas background image */
            background-size: cover;
            background-position: center;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
            margin: 0;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 600px;
            margin-top: 20px;
            border-radius: 10px;
            overflow-y: auto; /* Allows the container to scroll if content overflows */
            border: 2px solid #ff4500; /* Christmas border color (red) */
        }

        .header {
            text-align: center; /* Center align header */
            margin-bottom: 20px;
            width: 100%; /* Make header fit the page */
        }

        .logo {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .header h1 {
            margin: 0;
            font-size: 2.5em; /* Updated font size */
            color: #32CD32; /* Christmas green color */
            font-family: 'Courier New', Courier, monospace; /* Updated font */
        }

        .messages {
            width: 100%;
        }

        .messages h2 {
            font-size: 1.5em;
            color: #FFD700; /* Gold color */
            border-bottom: 2px solid #ff4500; /* Christmas border color (red) */
            padding-bottom: 5px;
            margin-bottom: 10px;
        }

        .message-list {
            list-style: none;
            padding: 0;
            max-height: 400px;
            overflow-y: auto;
            display: flex;
            flex-direction: column-reverse; /* Ensure new messages are at the top */
            gap: 10px;
        }

        .message {
            background-color: #fff;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            border: 1px solid #32CD32; /* Christmas border color (green) */
        }

        .message p {
            margin: 0;
            font-size: 1em;
            color: #555;
        }

        .message small {
            display: block;
            margin-top: 5px;
            text-align: right;
            color: #999;
        }

        .social-share {
            margin-top: 10px;
            display: flex;
            gap: 10px;
        }

        .social-icon {
            width: 24px;
            height: 24px;
            cursor: pointer;
        }

        footer {
            margin-top: 20px;
            text-align: center;
            color: #fff;
            font-size: 0.9em;
        }

        footer a {
            color: #FFD700; /* Gold color */
            text-decoration: none;
            font-weight: bold;
        }

        footer a:hover {
            text-decoration: underline;
        }

        .share-link {
            margin-top: 20px;
            font-size: 1.1em;
            color: #555;
            word-wrap: break-word;
        }

        .no-messages {
            text-align: center;
            font-size: 1.2em;
            color: #555;
            margin-top: 20px;
        }
    </style>
    <!-- Include html2canvas Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
</head>
<body>
    <div class="container" id="message-container">
        <div class="header">
            <img src="/images/logo.png" alt="Logo" class="logo">
            <h1>Welcome, <%= username %></h1>
        </div>
        <div class="messages">
            <h2>Your Messages</h2>
            <div class="message-list">
                <% if (messages.length === 0) { %>
                    <div class="no-messages">No messages available</div>
                <% } else { %>
                    <% messages.forEach((message, index) => { %>
                        <div class="message" id="message-<%= index %>">
                            <p><%= message.message %></p>
                            <small><%= message.timeSent %></small>
                            <div class="social-share">
                                <form method="POST" action="/share" enctype="multipart/form-data">
                                    <input type="hidden" name="platform" id="platform-<%= index %>">
                                    <input type="hidden" name="dataUrl" id="dataUrl-<%= index %>">
                                    <img src="/images/facebook-icon.png" alt="Share on Facebook" class="social-icon" onclick="captureMessage('<%= index %>', 'facebook')">
                                    <img src="/images/whatsapp-icon.png" alt="Share on WhatsApp" class="social-icon" onclick="captureMessage('<%= index %>', 'whatsapp')">
                                    <img src="/images/twitter-icon.png" alt="Share on Twitter" class="social-icon" onclick="captureMessage('<%= index %>', 'twitter')">
                                    <img src="/images/instagram-icon.png" alt="Share on Instagram" class="social-icon" onclick="captureMessage('<%= index %>', 'instagram')">
                                </form>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
            <!-- Shareable link section -->
            <div class="share-link">
                <p>Share your page: <strong>https://say-ya-mind.onrender.com/send/<%= username %></strong></p>
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; 2024 Say Ya Mind. All rights reserved.</p>
    </footer>
    <script>
        // Ensure new messages appear at the top
        const messageList = document.querySelector('.message-list');
        messageList.scrollTop = messageList.scrollHeight;

        function captureMessage(index, platform) {
            const messageElement = document.getElementById(`message-${index}`);
            html2canvas(messageElement).then(canvas => {
                canvas.toBlob(blob => {
                    const formData = new FormData();
                    formData.append('image', blob, 'message.png');
                    formData.append('platform', platform);

                    fetch('/share', {
                        method: 'POST',
                        body: formData
                    }).then(response => {
                        if (!response.ok) {
                            console.error('Error:', response.statusText);
                            return;
                        }
                        return response.json();
                    }).then(data => {
                        if (data.shareUrl) {
                            window.open(data.shareUrl, '_blank');
                        } else {
                            console.error('Share URL not received:', data);
                        }
                    }).catch(error => {
                        console.error('Error during fetch:', error);
                    });
                });
            }).catch(error => {
                console.error('Error capturing message:', error);
            });
        }
    </script>
</body>
</html>
