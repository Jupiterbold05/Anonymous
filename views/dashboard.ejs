<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Basic resets and general styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-image: url('https://i.imgur.com/r7I7MUC.jpeg'); /* Background image */
            background-size: cover;
            background-position: center;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            flex-direction: column;
            margin: 0;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 600px;
            margin-top: 20px;
            border-radius: 10px;
            overflow: hidden; /* Ensures content fits within the container */
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .header h1 {
            margin: 0;
            font-size: 2em;
            color: #FFD700; /* Gold color */
        }

        .messages {
            width: 100%;
        }

        .messages h2 {
            font-size: 1.5em;
            color: #FFD700; /* Gold color */
            border-bottom: 2px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 10px;
        }

        .message-list {
            list-style: none;
            padding: 0;
            max-height: 400px;
            overflow-y: auto;
            display: flex;
            flex-direction: column-reverse; /* Ensure new messages are at the top */
            gap: 10px;
        }

        .message {
            background-color: #fff;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .message p {
            margin: 0;
            font-size: 1em;
            color: #555;
        }

        .message small {
            display: block;
            margin-top: 5px;
            text-align: right;
            color: #999;
        }

        .social-share {
            margin-top: 10px;
            display: flex;
            gap: 10px;
        }

        .social-icon {
            width: 24px;
            height: 24px;
            cursor: pointer;
        }

        footer {
            margin-top: 20px;
            text-align: center;
            color: #fff;
            font-size: 0.9em;
        }

        footer a {
            color: #FFD700; /* Gold color */
            text-decoration: none;
            font-weight: bold;
        }

        footer a:hover {
            text-decoration: underline;
        }

        .share-link {
            margin-top: 20px;
            font-size: 1.1em;
            color: #555;
            word-wrap: break-word;
        }

        .no-messages {
            text-align: center;
            font-size: 1.2em;
            color: #555;
            margin-top: 20px;
        }
    </style>
    <!-- Include html2canvas Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
</head>
<body>
    <div class="container" id="message-container">
        <div class="header">
            <img src="/images/logo.png" alt="Logo" class="logo">
            <h1>Welcome, <%= username %></h1>
        </div>
        <div class="messages">
            <h2>Your Messages</h2>
            <div class="message-list">
                <% if (messages.length === 0) { %>
                    <div class="no-messages">No messages available</div>
                <% } else { %>
                    <% messages.forEach((message, index) => { %>
                        <div class="message" id="message-<%= index %>">
                            <p><%= message.message %></p>
                            <small><%= message.timeSent %></small>
                            <div class="social-share">
                                <img src="/images/facebook-icon.png" alt="Share on Facebook" class="social-icon" onclick="captureMessage('<%= index %>', 'facebook')">
                                <img src="/images/whatsapp-icon.png" alt="Share on WhatsApp" class="social-icon" onclick="captureMessage('<%= index %>', 'whatsapp')">
                                <img src="/images/twitter-icon.png" alt="Share on Twitter" class="social-icon" onclick="captureMessage('<%= index %>', 'twitter')">
                                <img src="/images/instagram-icon.png" alt="Share on Instagram" class="social-icon" onclick="captureMessage('<%= index %>', 'instagram')">
                            </div>
                        </div>
                    <% }); %>
                <% } %>
            </div>
            <!-- Shareable link section -->
            <div class="share-link">
                <p>Share your page: <strong>https://say-ya-mind.onrender.com/send/<%= username %></strong></p>
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; 2024 Say Ya Mind. All rights reserved.</p>
    </footer>
    <script>
        function captureMessage(index, platform) {
            const messageElement = document.getElementById(`message-${index}`);
            html2canvas(messageElement).then(canvas => {
                const dataUrl = canvas.toDataURL('image/png');
                window.location.href = `/share?dataUrl=${encodeURIComponent(dataUrl)}&platform=${platform}`;
            });
        }
    </script>
</body>
</html>
